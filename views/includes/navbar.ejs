<script>
document.addEventListener('DOMContentLoaded', function() {
  const priceToggle = document.getElementById('priceToggle');
  const priceToggleMobile = document.getElementById('priceToggleMobile');
  
  // Load saved state
  const savedState = localStorage.getItem('priceToggleState');
  if (savedState === 'true') {
    if (priceToggle) priceToggle.checked = true;
    if (priceToggleMobile) priceToggleMobile.checked = true;
    updatePrices(true);
  }
  
  // Handle desktop toggle change
  if (priceToggle) {
    priceToggle.addEventListener('change', function() {
      const showWithTax = this.checked;
      localStorage.setItem('priceToggleState', showWithTax);
      if (priceToggleMobile) priceToggleMobile.checked = showWithTax;
      updatePrices(showWithTax);
    });
  }
  
  // Handle mobile toggle change
  if (priceToggleMobile) {
    priceToggleMobile.addEventListener('change', function() {
      const showWithTax = this.checked;
      localStorage.setItem('priceToggleState', showWithTax);
      if (priceToggle) priceToggle.checked = showWithTax;
      updatePrices(showWithTax);
    });
  }
  
  function updatePrices(showWithTax) {
    const priceElements = document.querySelectorAll('.listing-price');
    priceElements.forEach(element => {
      const originalPrice = element.getAttribute('data-original-price');
      if (originalPrice) {
        if (showWithTax) {
          const priceWithTax = Math.round(parseFloat(originalPrice) * 1.18);
          element.textContent = `₹ ${priceWithTax.toLocaleString("en-IN")} + 18% GST`;
        } else {
          element.textContent = `₹ ${parseFloat(originalPrice).toLocaleString("en-IN")}`;
        }
      }
    });
  }
});

// Search functionality
function toggleSearchInput() {
  const overlay = document.getElementById('searchOverlay');
  if (overlay.style.display === 'flex') {
    overlay.style.display = 'none';
  } else {
    overlay.style.display = 'flex';
    document.getElementById('searchInput').focus();
  }
}

function performSearch() {
  const searchTerm = document.getElementById('searchInput').value.trim();
  if (searchTerm) {
    // Redirect to listings with search parameter
    window.location.href = `/listings?search=${encodeURIComponent(searchTerm)}`;
  } else {
    // Just redirect to listings if no search term
    window.location.href = '/listings';
  }
  toggleSearchInput();
}

function searchByTag(tag) {
  document.getElementById('searchInput').value = tag;
  performSearch();
}

// Close search overlay when clicking outside
document.addEventListener('click', function(event) {
  const overlay = document.getElementById('searchOverlay');
  const modal = document.querySelector('.search-modal');
  
  if (event.target === overlay) {
    toggleSearchInput();
  }
});

// Handle Enter key in search input
document.addEventListener('keydown', function(event) {
  if (event.key === 'Enter' && document.getElementById('searchInput').matches(':focus')) {
    performSearch();
  }
});
</script>
